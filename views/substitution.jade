extends index

block afterNav
	div#subEngine.jumbotron.row-fluid.page-header.col-xs-12.col-sm-offset-3.col-sm-6
		h3#substituteHeader Looking for a vegan alternative?

		form#substitution-form.col-xs-12
			
			select.chzn-select.querySearchSelect.form-control(name="item", data-placeholder="Enter non-vegan item...")	
				option.querySearchOptions(value='', data-placeholder="Non-vegan Item")
				for item in uniqueItems
					option.querySearchOptions(value='#{item}', data-placeholder="Enter non-vegan item...") #{item}
			div#substitute-params
				select.subs.chzn-select.form-control#units(name="units", style="height: 24px;", data-placeholder="Units...")
					option(value='', data-placeholder="units")
					for item in q
						option.col-xs-6(value='#{item.nonVegan.units}') #{item.nonVegan.units}
				select.subs.chzn-select.form-control#qty(name="qty", style="height: 24px;", data-placeholder="Quanity...")
					option(value='', data-placeholder="qty")
					for item in q
						option.col-xs-6(value='#{item.nonVegan.qty}') #{item.nonVegan.qty}


			button.btn.btn-success.substitution-submit(type="submit") Translate
	#substitute-results-header.jumbotron.row-fluid.page-header.col-xs-12.col-sm-offset-3.col-sm-6 Substitutes
		
		table.col-xs-12(border="0")
			thead
				tr#NonVegans
					th#NonItems Vegan
					th#NonUnits Units
					th#NonQty Qty
					th Notes

			tbody#substitute-results
				tr
					td nonVegan 1, cell 1
					td units 1, cell 2
					td qty
					td Notes

				tr
					td nonVegan 2, cell 1
					td units 2, cell 2
					td qty
					td notes


