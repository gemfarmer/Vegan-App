block afterNav
	div YUM YUM YUMMLY!
	h1= title
	p A tool for 
		a(href="http://veganizzm.com/") Veganizzm.com
	form#recipe-form

		select.chzn-select(multiple="true", name="allowedCuisine", style="width: 500px; hieght: 40px;", data-placeholder="Select cuisine...")
			for item in allowedCuisine
				option(value='#{item.searchValue}') #{item.description}
			
		br
		select.chzn-select(multiple="true", name="allowedCourse", style="width: 500px; hieght: 40px;", data-placeholder="Select courses...")
			for item in allowedCourse
				option(value='#{item.searchValue}') #{item.description}
		br
		select.chzn-select(multiple="true", name="allowedAllergy", style="width: 500px; hieght: 40px;", data-placeholder="Select allergy...")
			for item in allowedAllergy
				option(value='#{item.searchValue}') #{item.shortDescription}
	
		br
		select.chzn-select(multiple="true", name="allowedDiet", style="width: 500px; hieght: 40px;", data-placeholder="Select diet...")
			for item in allowedDiet
				option(value='#{item.searchValue}') #{item.shortDescription}
	
		br
		select.chzn-select.querySearch(name="q", style="width: 500px; height: 40px;", data-placeholder="Select recipe...")
			if q 
				for item in q
					option.querySearch(value='#{item.recipeName}') #{item.recipeName}	
		br
		button.submit-btn.btn.btn-primary(type="submit") Submit Data




