extends index

block metas
	//- meta(name='description', content='This is an example description!')
		Here you can dynamically control the meta tags for each page
		This is especially useful for social networking sites like facebook that grab information
		from these meta tags to determine how links to your site appear on their site

		Keep in mind that index is providing these for each page already:
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='title', content='#{title}')
			

block afterNav
	div.row-fluid.jumbotron.page-header.col-xs-12.col-sm-offset-3.col-sm-6
		h3#substitutesHeading Vegan Substitute Translator
		form.form-horizontal#share-form
			.fieldset#substitutes-repo 
				div.form-group
					label.form-label(for='non-vegan-item') Vegan Item
					div.col-xs-12
						input.form-control(type='text', name='non-vegan-item', placeholder='Non-Vegan Item', autofocus)
						input.form-control(type='text', name='non-vegan-qty', placeholder='Quantity', autofocus)
						input.form-control(type='text', name='non-vegan-units', placeholder='Unit of Measurement', autofocus)


				div.form-group.substitute-inputs#original
					label.form-label(for='vegan-substitute') Vegan Substitute
					#substitute-field.col-xs-10
						input.form-control.col-xs-6(type='text', name='vegan-substitute', placeholder='Vegan Substitute')
						input.form-control.col-xs-3(type='text', name='substitute-qty', placeholder='Quantity')
						input.form-control.col-xs-3(type='text', name='substitute-units', placeholder='Units')

						textarea.form-control(type='text', name='substitute-description', placeholder='Notes')
					button.btn.button-default#add-input-field.col-xs-2 +
						//- input.form-control.add(type='text', name='vegan-substitute', placeholder='Vegan Substitute')
			div.form-actions.col-xs-12
				a.btn.btn-success#submit-substitute Submit Substitute		
			


